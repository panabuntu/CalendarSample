<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.buntupana.calendarsample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".GoogleCalendarActivity"
            android:theme="@style/AppTheme.NoActionBar.GoogleCalendar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MenuActivity">
        </activity>
        <activity
            android:name=".GoogleCalendarWeeklyActivity"
            android:theme="@style/AppTheme.NoActionBar.GoogleCalendar">
        </activity>
        <activity
            android:name=".MonthlyCalendarActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".WeeklyCalendarActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".InfoActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>