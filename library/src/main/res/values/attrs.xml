<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EventsCalendarView">
        <attr name="textSize" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="currentDayBackgroundColor" format="color"/>
        <attr name="currentDayTextColor" format="color"/>
        <attr name="currentSelectedDayBackgroundColor" format="color"/>
        <attr name="currentSelectedDayTextColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="headerTextColor" format="color"/>
        <attr name="headerTextBold" format="boolean"/>
        <attr name="multiEventIndicatorColor" format="color"/>
        <attr name="targetHeight" format="dimension"/>
        <attr name="eventIndicatorStyle" format="enum">
            <enum name="fill_large_indicator" value="1"/>
            <enum name="no_fill_large_indicator" value="2"/>
            <enum name="small_indicator" value="3"/>
        </attr>
        <attr name="currentDayIndicator" format="boolean"/>
        <attr name="currentDayIndicatorStyle" format="enum">
            <enum name="fill_large_indicator" value="1"/>
            <enum name="no_fill_large_indicator" value="2"/>
        </attr>
        <attr name="currentSelectedDayIndicatorStyle" format="enum">
            <enum name="fill_large_indicator" value="1"/>
            <enum name="no_fill_large_indicator" value="2"/>
        </attr>
        <attr name="defaultSelectedPresentDay" format="boolean"/>
        <attr name="inactiveWeekend" format="boolean"/>
        <attr name="calendarFormat" format="enum">
            <enum name="monthly" value="0"/>
            <enum name="weekly" value="1"/>
        </attr>
    </declare-styleable>
</resources>
